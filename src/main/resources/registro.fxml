<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" prefHeight="418.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.reservasuq.controlador.PersonaControlador">

    <Label text="Registro de Usuario">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <TextField fx:id="txtCedula" promptText="Cédula" />
    <TextField fx:id="txtNombre" promptText="Nombre" />
    <TextField fx:id="txtCorreo" promptText="Correo Institucional" />
    <PasswordField fx:id="txtPassword" promptText="Contraseña" />
    <ComboBox fx:id="comboTipoPersona" promptText="Tipo de Persona" />


    <!-- Aquí se agrega el ListView necesario -->
    <ListView fx:id="listViewPersonas" prefHeight="200.0" prefWidth="300.0" />

    <Button onAction="#registrarPersona" text="Registrar" />
</VBox>
