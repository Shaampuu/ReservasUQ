<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" prefHeight="400.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.reservasuq.controlador.ReservasControlador">

    <Label text="Crear Reserva">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- Selección de la instalación -->
    <ComboBox fx:id="comboInstalacion" promptText="Seleccionar Instalación" />

    <!-- Selección de la fecha de la reserva -->
    <DatePicker fx:id="dateReserva" promptText="Seleccionar Fecha" />

    <!-- Selección de la hora de la reserva -->
    <TextField fx:id="txtHora" prefHeight="25.0" prefWidth="313.0" promptText="Hora (HH:MM)" />

    <!-- Botón para crear la reserva -->
    <Button onAction="#crearReserva" text="Reservar" />

    <!-- ListView para mostrar las reservas -->
    <ListView fx:id="listViewReservas" prefHeight="109.0" prefWidth="400.0" />
</VBox>
